@model List<TP8_MVC.Models.CustomerView>
@{ 
    ViewBag.Title = "Clientes Northwind";
}
<body>

    <br /><h1>@ViewBag.Title</h1><br />

    <table class="table table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Compañía</th>
                <th scope="col">Modificar</th>
                <th scope="auto">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
            <tr>
                <th scope="row">@customer.ID</th>
                <td>@customer.contactName</td>
                <td>@customer.companyName</td>
                <td><a href=@Url.Action("AddMod", new { ID = customer.ID }) class="customer-mod">
                    <img src="~/Content/Imagenes/Mod_Icon.png" alt="Modificar" style="width:40px" /></a></td>
                <td>
                    <a href=@Url.Action("Delete", new { ID = customer.ID }) class="customer-delete">
                        <img src="~/Content/Imagenes/Delete_Icon.png" alt="Eliminar" style="width:20px" />
                    </a>
                </td>

            </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $(document).on("click", ".customer-delete", function (event) {
                if (!confirm("Esta seguro de querer borrar?"))
                    return false;
            });
            });
    </script>
</body>